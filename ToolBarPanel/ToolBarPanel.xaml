<UserControl x:Class="ToolBarPanel.ToolBarPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToolBarPanel"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid Background="Red" Name="toolbarContainer">
        <ToolBarTray IsLocked="True" Name="tt"  Background="#FF28292A" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <ToolBar Name="tb" Background="{x:Null}" Foreground="Black" Width="{Binding ElementName=tt,Path=ActualWidth}"  />
        </ToolBarTray>
    </Grid>
</UserControl>
