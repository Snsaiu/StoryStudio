<UserControl x:Class="NodeBase.P_BoolAttriUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NodeBase"
            >
    <Grid>
        <Border BorderBrush="#FF0098D7" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30*"/>
                    <ColumnDefinition Width="70*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Name="BoolLabel"  TextAlignment="Center" Background="#FF373737" Foreground="White" ></TextBlock>
                <CheckBox Name="BoolContent" Grid.Column="1">
                </CheckBox>
            </Grid>
        </Border>
    </Grid>
</UserControl>
