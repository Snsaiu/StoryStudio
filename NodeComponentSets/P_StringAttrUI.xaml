<UserControl x:Class="NodeBase.P_StringAttrUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NodeBase"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
   
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="70*"/>
            </Grid.ColumnDefinitions>
        <TextBlock Name="StrLabel" VerticalAlignment="Center"  Background="#FF373737" Foreground="White" ></TextBlock>
        <TextBox Name="StrContent" BorderThickness="1" Foreground="White"  TextWrapping="Wrap" Grid.Column="1" VerticalScrollBarVisibility="Auto" Background="#FF676767" UndoLimit="0"  >
        </TextBox>
        </Grid>

</UserControl>
